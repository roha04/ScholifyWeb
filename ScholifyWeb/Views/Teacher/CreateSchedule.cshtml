@model ScholifyWeb.Models.Schedule

@{
    ViewData["Title"] = "Create Schedule";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Створити розклад" asp-route-classId="@ViewBag.ClassId" method="post">
    <div class="form-group">
        <label asp-for="Subject" class="control-label">Предмет</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Date" class="control-label">Дата</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Room" class="control-label">Аудиторія</label>
        <input asp-for="Room" class="form-control" />
        <span asp-validation-for="Room" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime" class="control-label">Початок уроку</label>
        <input asp-for="StartTime" class="form-control" type="time" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime" class="control-label">Кінець уроку</label>
        <input asp-for="EndTime" class="form-control" type="time" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
