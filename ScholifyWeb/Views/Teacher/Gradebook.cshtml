@model IEnumerable<ScholifyWeb.Models.GradebookViewModel>

<h2>Gradebook</h2>

<table class="table">
    <thead>
        <tr>
            <th>Учень</th>
            <th>Оцінка</th>
            <th>Дія</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.StudentName</td>
                <td>
                    @foreach (var grade in entry.Grades)
                    {
                        <span>@grade.Key.ToString("yyyy-MM-dd"): @grade.Value </span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("EditGrades", "Teacher", new { studentId = entry.StudentId })" class="btn btn-primary">Редагувати</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f4f4f4;
        }

    .btn {
        padding: 8px 12px;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-success:hover {
        background-color: #1e7e34;
    }

</style>