@model List<ScholifyWeb.Models.Grade>


<h2>Мої оцінки</h2>

<table class="table">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Предмет</th>
            <th>Оцінка</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model)
        {
            <tr>
                <td>@grade.Schedule.Date.ToString("yyyy-MM-dd")</td>
                <td>@grade.Schedule.Subject</td>
                <td>@grade.Score</td>
            </tr>
        }
    </tbody>
</table>
